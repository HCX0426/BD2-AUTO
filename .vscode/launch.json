{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Python: 启动主程序",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/console_run.py",  // 相对根目录路径（核心）
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",  // 工作目录设为项目根目录（避免路径错误）
      "justMyCode": true
    },
    {
      "name": "Python: 热重载启动主程序",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/reload_runner.py",  // 调试热重载脚本
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",  // 工作目录保持项目根目录
      "justMyCode": true,
      "subProcess": true,  // 关键：允许调试子进程（主程序 main.py）
      "env": {
        "PYDEVD_WARN_EVALUATION_TIMEOUT": "1000"  // 解决Qt界面调试卡顿问题
      },
      "args": []  // 无需额外参数
    },
    {
      "name": "Python: 调试 console_run（普通模式）",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/console_run.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": true,
      "env": {
        "PYTHONIOENCODING": "utf-8"
      }
    },
    {
      "name": "Python: 调试 console_run（热重载）",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/console_run.py",  // 直接调试目标文件
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": true,
      "subProcess": true,  // 关键：调试热重载启动的子进程（实际运行 console_execute 的进程）
      "args": ["--reload"],  // 传递 --reload 参数，触发热重载逻辑
      "env": {
        "PYDEVD_WARN_EVALUATION_TIMEOUT": "1000",
        "PYTHONIOENCODING": "utf-8"  // 避免中文乱码
      }
    },
  ]
}